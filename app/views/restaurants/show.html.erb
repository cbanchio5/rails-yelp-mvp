<h2><%= @restaurant.name %></h2>
<div class="container">
<h4>Address: <%= @restaurant.address %></h4>
<h4>Phone number: <%= @restaurant.phone_number %></h4>
<h4>Category: <%= @restaurant.category %></h4>

<h3>Reviews</h3>
<% @restaurant.reviews.each do |review| %>
<p><%= review.content  %> | <em><%=review.rating  %></em></p>
<p></p>

<% end %>

<p><%= link_to "Leave a review", new_restaurant_review_path(@restaurant) %> </p>

</div>
